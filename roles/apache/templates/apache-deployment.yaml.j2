apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ apache_app_name }}
  namespace: {{ apache_namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{ apache_app_name }}
  template:
    metadata:
      labels:
        app: {{ apache_app_name }}
    spec:
      containers:
      - name: nginx
        image: nginx:alpine
        ports:
        - containerPort: 80
        resources:
          requests:
            memory: "16Mi"
            cpu: "50m"
          limits:
            memory: "32Mi"
            cpu: "100m"
        readinessProbe:
          httpGet:
            path: /
            port: 80
          initialDelaySeconds: 5
          periodSeconds: 5
        livenessProbe:
          httpGet:
            path: /
            port: 80
          initialDelaySeconds: 10
          periodSeconds: 10
---
apiVersion: v1
kind: Service
metadata:
  name: {{ apache_app_name }}-service
  namespace: {{ apache_namespace }}
spec:
  selector:
    app: {{ apache_app_name }}
  ports:
  - port: 80
    targetPort: 80
    nodePort: {{ apache_nodeport }}
  type: {{ apache_service_type }}
---
apiVersion: v1
kind: Service
metadata:
  name: {{ apache_app_name }}-loadbalancer
  namespace: {{ apache_namespace }}
  annotations:
    service.beta.kubernetes.io/aws-load-balancer-type: "nlb"
    service.beta.kubernetes.io/aws-load-balancer-scheme: "internet-facing"
spec:
  selector:
    app: {{ apache_app_name }}
  ports:
  - port: 80
    targetPort: 80
    protocol: TCP
  type: LoadBalancer